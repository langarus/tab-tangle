{
  "manifest_version": 3,
  "name": "Tab Tangle",
  "version": "1.0.0",
  "description": "Manage, search, and organize your browser tabs with a visual dashboard. Search across all tabs, close multiple tabs at once, and keep your browsing organized.",
  "permissions": ["activeTab", "tabs"],
  "incognito": "not_allowed",
  "externally_connectable": {
    "matches": [
      "https://www.tab-tangle.com/*",
      "https://www.tab-tangle.web.app/*",
      "http://localhost:3002/*"
    ]
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Tab Tangle",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
